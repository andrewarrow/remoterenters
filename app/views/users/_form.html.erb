<%= simple_form_for user, html: { class: "user form" } do |f| %>
  <% if user.errors.any? %>
    <div class="error-message">
      <%= user.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <p><%= f.input :email, placeholder: 'email', input_html: { autofocus: true } %></p>
  <p><%= f.submit class: "btn btn--secondary" %></p>
<% end %>

