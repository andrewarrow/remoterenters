<%= simple_form_for user, html: { class: "user form" } do |f| %>
  <% if user.errors.any? %>
    <div class="error-message">
      <%= user.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :email, placeholder: 'email', input_html: { autofocus: true } %>
  <%= f.input :name, placeholder: 'password' %>
  <input type="hidden" name="login" value="1"/>
  <%= f.submit class: "btn btn--secondary", value: 'Log In' %>
<% end %>

